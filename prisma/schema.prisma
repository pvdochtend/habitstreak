// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ════════════════════════════════════
// USER
// ════════════════════════════════════
model User {
  id              String   @id @default(cuid())
  email           String   @unique
  passwordHash    String   @map("password_hash")
  dailyTarget     Int      @default(1) @map("daily_target")
  streakFreezes   Int      @default(0) @map("streak_freezes")
  colorScheme     String   @default("blue") @map("color_scheme")
  darkMode        Boolean  @default(false) @map("dark_mode")
  installPromptDismissed  Boolean  @default(false) @map("install_prompt_dismissed")
  pwaInstalled            Boolean  @default(false) @map("pwa_installed")
  createdAt       DateTime @default(now()) @map("created_at")

  // Relations
  tasks           Task[]
  checkIns        CheckIn[]

  @@map("users")
}

// ════════════════════════════════════
// TASK
// ════════════════════════════════════
enum SchedulePreset {
  ALL_WEEK
  WORKWEEK
  WEEKEND
  CUSTOM
}

model Task {
  id              String          @id @default(cuid())
  userId          String          @map("user_id")
  title           String
  schedulePreset  SchedulePreset  @map("schedule_preset")
  daysOfWeek      Int[]           @default([]) @map("days_of_week") // 0=Mon, 6=Sun (ISO 8601)
  icon            String?         @default("CheckSquare")
  isActive        Boolean         @default(true) @map("is_active")
  createdAt       DateTime        @default(now()) @map("created_at")
  updatedAt       DateTime        @updatedAt @map("updated_at")

  // Relations
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  checkIns        CheckIn[]

  @@index([userId, isActive])
  @@map("tasks")
}

// ════════════════════════════════════
// CHECK-IN
// ════════════════════════════════════
enum CheckInStatus {
  DONE
}

model CheckIn {
  id              String          @id @default(cuid())
  userId          String          @map("user_id")
  taskId          String          @map("task_id")
  date            String          // YYYY-MM-DD format (Europe/Amsterdam)
  status          CheckInStatus   @default(DONE)
  createdAt       DateTime        @default(now()) @map("created_at")

  // Relations
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  task            Task            @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@unique([taskId, date])
  @@index([userId, date])
  @@map("check_ins")
}

// ════════════════════════════════════
// AUTH ATTEMPTS (Rate Limiting)
// ════════════════════════════════════
model AuthAttempt {
  id              String    @id @default(cuid())
  identifier      String    // email or IP address
  identifierType  String    @map("identifier_type") // 'email' or 'ip'
  attemptType     String    @map("attempt_type")    // 'login' or 'signup'
  success         Boolean   @default(false)
  ipAddress       String?   @map("ip_address")
  userAgent       String?   @map("user_agent")
  createdAt       DateTime  @default(now()) @map("created_at")

  @@index([identifier, attemptType, createdAt])
  @@index([ipAddress, attemptType, createdAt])
  @@map("auth_attempts")
}

// ════════════════════════════════════
// ACCOUNT LOCKOUT (Rate Limiting)
// ════════════════════════════════════
model AccountLockout {
  id              String    @id @default(cuid())
  email           String    @unique
  lockedUntil     DateTime  @map("locked_until")
  failedAttempts  Int       @default(0) @map("failed_attempts")
  lastFailedAt    DateTime  @map("last_failed_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  @@index([email, lockedUntil])
  @@map("account_lockouts")
}
